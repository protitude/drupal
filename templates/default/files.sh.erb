#! /bin/bash
if [ -d "<%= @assets %>" ]; then
  chown -R <%= @owner %>:<%= @group %> <%= @assets %>
fi
if [ -d "<%= @files %>" ]; then
  chown <%= @owner %>:<%= @group %> <%= @files %>
  chmod 777 <%= @files %>
  find <%= @files %> -type d -exec chmod 755 {} \;
  find <%= @files %> -type f -exec chmod 664 {} \;
fi
